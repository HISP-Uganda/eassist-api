{
  "name": "eassist-api",
  "version": "10.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "PORT=8080 nodemon src/server.js",
    "start": "PORT=8080 node src/server.js",
    "stop:8080": "lsof -ti tcp:8080 | xargs kill -9 || true",
    "restart:8080": "npm run stop:8080 && npm start",
    "db:create": "node scripts/db-create.js",
    "migrate:init": "node scripts/run-sql.js db/init.sql",
    "migrate": "node scripts/run-migrations.js",
    "migrate:run": "node scripts/run-migrations.js",
    "migrate:prep": "node scripts/generate-permissions-sql.js",
    "migrate:all": "npm run migrate:prep && npm run migrate && npm run bootstrap:admin",
    "migrate:apply": "npm run migrate",
    "setup": "node scripts/db-create.js && node scripts/run-sql.js db/init.sql",
    "setup:all": "node scripts/db-create.js && node scripts/run-sql.js db/init.sql && node scripts/seed-initial.js",
    "seed:initial": "node scripts/seed-initial.js",
    "seed:permissions": "node scripts/seed-permissions.js",
    "seed:superuser": "node scripts/seed-superuser.js",
    "seed:permissions-and-superuser": "node scripts/seed-permissions-and-superuser.js",
    "seed:all": "npm run seed:permissions-and-superuser && npm run seed-initial",
    "seed:moh": "node scripts/seed-ministry-health.js",
    "generate:openapi": "node scripts/generate-openapi.js",
    "bootstrap:admin": "npm run seed:permissions-and-superuser",
    "migrate:prep-local": "node scripts/generate-permissions-sql.js",
    "generate:api-docs": "node scripts/generate-openapi.js && node scripts/generate-readme-api.js",
    "seed:sources": "node scripts/seed-sources.js",
    "test": "NODE_ENV=test JWT_SECRET=testsecret MESSAGES_SEND_PER_MIN=1 node --test test/*.test.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-list-endpoints": "^7.1.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.12.0",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0",
    "jsonwebtoken": "^9.0.2"
  }
}
