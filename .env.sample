# =====================
# eAssist v10 — .env.sample (safe defaults)
# =====================
# Server
PORT=8080
NODE_ENV=development

# Database (local developer DB)
DATABASE_URL=postgres://eassist:password@localhost:5432/eassist

# Auth (JWT) — replace in real env
JWT_SECRET=changeme
JWT_REFRESH_SECRET=changeme-refresh
ACCESS_TOKEN_TTL_MIN=30
REFRESH_TOKEN_TTL_DAYS=7

# Seeded admin (used by npm run seed:initial / setup:all)
ADMIN_EMAIL=admin@eassist.local
ADMIN_PASSWORD=changeMeStrong
ADMIN_FULL_NAME='System Administrator'

# CORS (optional, comma-separated origins)
CORS_ORIGINS=http://localhost:3000

# Logging (optional): silent | error | warn | info | debug
LOG_LEVEL=info

# Optional: Public URL for emails/links
PUBLIC_APP_URL=http://localhost:3000

# Optional: File storage base (used by uploads if you add them)
STORAGE_DIR=./storage

# Optional: SMTP defaults for local testing (DB-backed settings take precedence in app UIs)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@eassist.local
SMTP_FROM_NAME='eAssist Support'

